{
  "name": "nestjs-demo",
  "version": "1.0.0",
  "description": "A demo project for NestJS",
  "repository": "git@github.com:miZyind/nestjs-demo.git",
  "author": "miZyind <mizyind.dev>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf dist",
    "dev": "nest start --path tsconfig.json --watch",
    "lint": "eslint src --max-warnings 0",
    "build": "nest build --path tsconfig.json",
    "start": "node dist/main.js",
    "typeorm": "typeorm-ts-node-commonjs -d src/db.ts",
    "typeorm:generate": "typeorm-ts-node-commonjs migration:generate -d src/db.ts"
  },
  "engines": {
    "node": ">=22",
    "yarn": ">=1.22.19"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "bcrypt": "^6.0.0",
    "mysql2": "^3.15.3",
    "nestjs-xion": "^8.0.1",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@nestjs/cli": "^11.0.14",
    "@types/amqplib": "^0.10.8",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.10.1",
    "@types/passport-jwt": "^4.0.1",
    "eslint-plugin-mizyind": "^8.2.2",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
