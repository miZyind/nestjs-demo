    "@types/bcrypt": "^5.0.0",
    "@types/node": "^17.0.22",
    "@types/passport-jwt": "^3.0.6",
    "eslint-plugin-mizyind": "^4.2.1",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
