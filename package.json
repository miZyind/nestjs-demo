    "@types/bcrypt": "^5.0.0",
    "@types/node": "^16.9.1",
    "@types/passport-jwt": "^3.0.6",
    "eslint-plugin-mizyind": "^3.1.1",
    "husky": "^7.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:mizyind/base"
